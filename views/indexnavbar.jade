//- Navbar section.
//- 
//- Area of general site navigation and major function activation.
//-

//- Navbar is a standard bootstrap type.
nav.navbar.navbar-default.navbar-inverse.navbar-fixed-top(role="navigation")

  //- Fluid.
  .container-fluid

    //- The header defines the minimum-look toggle.
    .navbar-header
      button.navbar-toggle(type="button",data-toggle="collapse",data-target="#navbarCollapse")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="#") #{title}

    //- Main project buttons.
    .collapse.navbar-collapse#navbarCollapse
      ul.nav.navbar-nav

        //- Home.
        li.active
          a(href="#") Home

        //- Projects.
        li.active
          a#ProjectsButton Projects

        //- Themes.
        li.active.dropdown
          a.dropdown-toggle(href="#", data-toggle="dropdown")
            |  Themes 
            b.caret
            ul.dropdown-menu
              li
                a#UnicornButton(href="#") Unicorn
              li
                a#TechButton(href="#") Tech

    //- Commic strip.
    .container

      //- Define a scrolling row.
      .col-xs-12#commicstriprow

        //- Left controller.
        .leftcontroller(data-targetselector="#commicstrip")

        //- Scrollable region.
        #commicstrip

          //- Just add some random items.
          - for (var i = 0; i < 88; ++i) {
              img.commicframe(id="frame" + i, style="left:" + (i * 64 + 5).toString() + "px;",src="./media/images/" + (i % 8) + ".png")
          - }

        //- Right controller.
        .rightcontroller(data-targetselector="#commicstrip")
