//- Navbar section.
//- 
//- Area of general site navigation and major function activation.
//-

//- Navbar is a standard bootstrap type.
nav.navbar.navbar-default.navbar-inverse.navbar-fixed-top(role="navigation")

  //- Fluid.
  .container-fluid

    //- The header defines the minimum-look toggle.
    .navbar-header
      button.navbar-toggle(type="button",data-toggle="collapse",data-target="#navbarCollapse")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="/" style='color:white;') #{title}

    //- Main project buttons.
    .navbar-collapse.collapse

      //- Left nav
      ul#main-menu.nav.navbar-nav

        //- Projects.
        li.dropdown
          a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-expanded="false") Projects&nbsp;
            span.caret
          ul.dropdown-menu(role="menu")
              li#NewProjectLI
                a#NewProjectButton(href="#") New Project...
              li#OpenProjectLI
                a#OpenProjectButton(href="#") Search for/Open Project...
              li#SaveProjectLI
                a#SaveProjectButton(href="#") Save Project...
              li#CloseProjectLI
                a#CloseProjectButton(href="#") Close Project

        //- Types.
        li.dropdown
          a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-expanded="false") Types&nbsp;
            span.caret
          ul.dropdown-menu(role="menu")
              li#NewTypeLI
                a#NewTypeButton(href="#") New Type...
              li#SearchTypeLI
                a#SearchTypeButton(href="#") Search for Type...
              li#NewMethodLI
                a#NewMethodButton(href="#") New Method...
              li#SearchMethodLI
                a#SearchMethodButton(href="#") Search for Method...
              li#NewPropertyLI
                a#NewPropertyButton(href="#") New Property...
              li#NewEventLI
                a#NewEventButton(href="#") New Event...

        //- Adminzone
        li#AdminzoneLI.dropdown(style="display:none;")
          a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-expanded="false") AdminZone&nbsp;
            span.caret
          ul.dropdown-menu(role="menu")
              li#UsersLI
                a#UsersButton(href="#") Users &amp; Permissions...
              li#ProjectsLI
                a#ProjectsButton(href="#") Projects...
              li#ActivatePPLI
                a#ActivatePPButton(href="#") Purchasable Products...

      button#StopBtn.btn.disabledifnoproj.hiddenifnotrunning.navbar-right(type="button" data-toggle="tooltip" title="Stop Simulation" aria-label="Stop Simulation" style="margin-left: 10px; margin-right: 10px; margin-top: 10px;")
        span.glyphicon.glyphicon-stop(aria-hidden="true")
      button#PlayBtn.btn.btn-default.disabledifnoproj.hiddenifrunning.navbar-right(type="button" data-toggle="tooltip" title="Run Simulation" aria-label="Run Simulation" style="margin-right: 10px; margin-top: 10px;")
        span.glyphicon.glyphicon-play(aria-hidden="true")
