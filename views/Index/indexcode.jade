//- Code section is a gzsection.
.row.gzsection#code

  script
    | function functionBlockChangeListener() {
    | 
    |   if (code) {
    | 
    |     return code.blocklyChangeListener();
    |   }
    |   return null;
    | }
    | function functionBlockFrameLoaded() {
    | 
    |   if (code) {
    | 
    |     if (code.BlocklyIFrame_OnLoad) { code.BlocklyIFrame_OnLoad(); code.BlocklyIFrame_OnLoad = null; }
    |     return code;
    |   }
    |   return null;
    | }

  //- First the Method.
  .row#titlerow
    .col-xs-12
      #titlediv

  //- Next the Blockly frame.
  .row
    .col-xs-12
      iframe#BlocklyIFrame

  //- Next the solution explorer.
  .row

    //- Define a scrollable strip.
    .col-xs-12#typestriprow

      //- The left controller.
      .leftcontroller(data-targetselector="#typestrip")

      //- The scrolling region.  Contains projectitemsitem(s).
      #typestrip

      //- The right controller.
      .rightcontroller(data-targetselector="#typestrip")
