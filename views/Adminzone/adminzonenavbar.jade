//- Area of general site navigation and major function activation.
//-

//- Navbar is a standard bootstrap type.
nav.navbar.navbar-default.navbar-inverse.navbar-fixed-top(role="navigation")

  //- Fluid.
  .container-fluid

    //- The header defines the minimum-look toggle.
    .navbar-header
      button.navbar-toggle(type="button",data-toggle="collapse",data-target="#navbarCollapse")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="/" style='color:white;') #{title}

    //- Main project buttons.
    .collapse.navbar-collapse#navbarCollapse
      ul.nav.navbar-nav

        li.active.dropdown
          a.dropdown-toggle(href="#", data-toggle="dropdown")
            span.glyphicon.glyphicon-user
            | &nbsp;Users
            ul.dropdown-menu
              li#ChgPwdLI.enabled
                a#ChgPwdBtn(href="#") Change password

        li.active
          a(href="#") 
            span.glyphicon.glyphicon-th-list
            | &nbsp;Logitems

        li.active.dropdown
          a.dropdown-toggle(href="#", data-toggle="dropdown")
            span.glyphicon.glyphicon-list-alt
            | &nbsp; Products/Classes
            ul.dropdown-menu
              li#NewProductClassLI.enabled
                a#NewProductClassButton(href="#") New Product or Class...
              li#EditProductClassLI.enabled
                a#EditProductClassButton(href="#") Work w/Product or Class...

