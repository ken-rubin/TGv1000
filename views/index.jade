doctype
html
  head
    meta(charset="utf-8")
    title #{title}
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="css/bootstrap.min.css")
    link(rel="stylesheet", href="css/bootstrap-dialog.min.css")
    link#ThemeStyle(rel="stylesheet", href="css/tg.css")
  body
    nav.navbar.navbar-default.navbar-inverse.navbar-fixed-top(role="navigation")
      .container-fluid
        .navbar-header
          button.navbar-toggle(type="button",data-toggle="collapse",data-target="#navbarCollapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="#") #{title}
        .collapse.navbar-collapse#navbarCollapse
          ul.nav.navbar-nav
            li.active
              a(href="#") Home
            li.active
              a#ProjectsButton Projects
            li.active.dropdown
              a.dropdown-toggle(href="#", data-toggle="dropdown")
                |  Themes 
                b.caret
                ul.dropdown-menu
                  li
                    a#UnicornButton(href="#") Unicorn
                  li
                    a#TechButton(href="#") Tech

        .collapse.navbar-collapse
          .col-xs-12#commicstriprow
            .leftcontroller(data-targetselector="#commicstrip")
            #commicstrip
              - for (var i = 0; i < 88; ++i) {
                img.commicframe(id="frame" + i, style="left:" + (i * 64 + 5).toString() + "px;",src="./media/images/" + (i % 8) + ".png")
              - }
            .rightcontroller(data-targetselector="#commicstrip")

    .rotatelabel#designertext Designer
    .rotatelabel#codetext Code
    .container-fluid

      .row.gzsection#designer
        .row
          .center-block#designsurfacewrapperwrapper
            #designsurfacewrapper
              #designsurface
                canvas#surfacecanvas(width="1024",height="768")
        br
        br
        .row
          .col-xs-12#toolstriprow
            .leftcontroller(data-targetselector="#toolstrip")
            #toolstrip
              - for (var i = 0; i < 27; ++i) {
                .paletteitem(style="left:" + (i * 55 + 5).toString() + "px;")
              - }
            .rightcontroller(data-targetselector="#toolstrip")

      .row.gzsection#code
        .row
          .col-xs-12
            iframe#BlocklyIFrame(src='./blockly/blocklyframe.html')
        .row
          .col-xs-12#projectitemsstriprow
            .leftcontroller(data-targetselector="#projectitemsstrip")
            #projectitemsstrip
              - for (var i = 0; i < 5; ++i) {
                .projectitemsitem(id="item" + i, style="left:" + (i * 200 + 5).toString() + "px;")
                  h4
                    | object #{i}
                  hr(width="60%")
                  | Events
                  .projectsitembutton(id="onclickitem" + i)
                    | OnClick
                  .projectsitembutton 
                    | OnTick
                  .projectsitembutton 
                    | OnKeyPress
                  .projectsitembutton
                    img.addprojectitemitembutton(id="addeventbutton" + i, src="./media/images/plus.png")
                  br
                  | Functions
                  .projectsitembutton 
                    | CreateShip
                  .projectsitembutton 
                    | Fire
                  .projectsitembutton 
                    img.addprojectitemitembutton(id="addfunctionbutton" + i, src="./media/images/plus.png")
                  br
                  | Properties
                  .projectsitembutton 
                    | Ship
                  .projectsitembutton 
                    img.addprojectitemitembutton(id="addpropertybutton" + i, src="./media/images/plus.png")
              - }
              .projectitemsitem#additemprojectitem(style="left:" + (5 * 200 + 5).toString() + "px;")
            .rightcontroller(data-targetselector="#projectitemsstrip")

    .container
      footer
        .well.text-info Powered by: Node, Express, Body-parser, Jade, Morgan, Less-middleware; jQuery, Require, Bootstrap and Bootstrap-dialog.
    script(src="http://code.jquery.com/jquery.min.js")
    script(src="js/bootstrap.min.js")
    script(src="js/bootstrap-dialog.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/require.js/2.1.16/require.min.js", data-main="js/main.js")
