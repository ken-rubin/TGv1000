//- Jade DOM for the imageSound dialog search snippet. 
//-

.snippetcontext#ImageSoundDialogSearchSnippet(data-module="Dialogs/ImageSoundDialog/ImageSoundDialogSearchButtonHandler")
.row
  | Type in a search string.  We'll try to find the resource you're looking for.
  br
  .row
    br
    .col-xs-2
      label.control-label(for="ISSearchInput", style="margin-top:8px;") Search string
    .col-xs-6
      input.form-control#ISSearchInput(type="text", placeholder="type your set of tags to match here")
    .col-xs-4
      button.btn.btn-info#ISInnerSearchButton Search
  br
  .well
      .col-xs-12#ISWellMsg(style="display:none;")

      //- Define a scrollable row.
      .col-xs-12#IStoolstriprow(style="display:none;")

        //- Left controller.
        .leftcontroller(data-targetselector="#IStoolstrip")

        //- Scrollable region.
        #IStoolstrip

        //- Right controller.
        .rightcontroller(data-targetselector="#IStoolstrip")
