//- Jade DOM for the login dialog. 
//-

.well
    .row
        form.form-signin
          h2.form-signin-heading
            | Please sign in
          label.sr-only(for="inputUsername")
            | Email address
          input#inputUsername.form-control(type="text" placeholder="Enter your user name" required autofocus)
          br
          label.sr-only(for="inputPassword")
            | Password
          input#inputPassword.form-control(type="password" placeholder="Password" required)
          br
          button.btn.btn-lg.btn-primary.btn-block(type="submit")
            | Sign in


