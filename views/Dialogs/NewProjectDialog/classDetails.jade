//- Jade DOM for Class Details
//-
//-

h4(style="margin-top:-5px;")
  | <b>Enter details for your new Class.</b>
h5
  | All but Name are optional until the Class is made <i>active</i>, and it's time for students to sign up.
.col-xs-2
      label.control-label(for="ProjectName", style="margin-top:6px;") Name
.col-xs-4
      input.form-control#ProjectName(type="text", placeholder="Enter Class name.")
.col-xs-6
br
br
.col-xs-2
    label.control-label(for="ProjectDescription", style="margin-top:6px;") Class Description
.col-xs-10
    textarea.form-control#ProjectDescription(spellcheck=true cols=40 rows=2 placeholder="Enter a complete description of your Class.")
br
br
br
.col-xs-2
        label.control-label(for="ProjectTags", style="margin-top:6px;") Search tags
.col-xs-10
        textarea#ProjectTags.form-control(spellcheck=true cols=40 rows=2 placeholder="Enter words to help people search for this Class.")
br
br
br
.col-xs-2
    label.control-label(for="InstructorFirst", style="margin-top:6px;") Instructor
.col-xs-2
    input.form-control#InstructorFirst(placeholder="First name", style="width:100%;")
.col-xs-2
    input.form-control#InstructorLast(placeholder="Last name", style="width:100%;")
.col-xs-2
    label.control-label(for="Phone", style="margin-top:6px;") Phone
.col-xs-3
    input.form-control#Phone
.col-xs-1
br
br
.col-xs-2
    label.control-label(for="Facility", style="margin-top:6px;") Where
.col-xs-4
    input.form-control#Facility(placeholder="Facility name")
.col-xs-2
    label.control-label(for="When1", style="margin-top:6px;") When
.col-xs-4
    input.form-control#When1(placeholder="Class 1 date  / start time-end time")
br
br
.col-xs-2
.col-xs-4
    input.form-control#Address(placeholder="Address line 1")
.col-xs-2
.col-xs-4
    input.form-control#When2(placeholder="Class 2 date  / start time-end time")
br
br
.col-xs-2
.col-xs-4
    input.form-control#Room(placeholder="Room #")
.col-xs-2
.col-xs-4
    input.form-control#When3(placeholder="Class 3 date  / start time-end time")
br
br
.col-xs-2
.col-xs-4
  #dc(style="width: 44%; float: left;")
    input.form-control#City(placeholder="City" )
  #ds(style="width: 27.7%; float: left;")
    select.form-control#State(style="width: 5.0em;")
        each val,index in ['AK','AL','AR','AS','AZ','CA','CO','CT','DC','DE','FL','GA','GU','HI','IA','ID','IL','IN','KS','KY','LA','MA','MD','ME','MH','MI','MN','MO','MS','MT','NC','ND','NE','NH','NJ','NM','NV','NY','OH','OK','OR','PA','PR','PW','RI','SC','SD','TN','TX','UT','VA','VI','VT','WA','WI','WV','WY']
            option(value=index)= val
  #dz(style="width: 27.7%; float: right;")
    input.form-control#Zip(placeholder="Zip" )
.col-xs-2
.col-xs-4
    input.form-control#When4(placeholder="Class 4 date  / start time-end time")
br
br
.col-xs-8
.col-xs-4
    input.form-control#When5(placeholder="Class 5 date  / start time-end time")
br
br
.col-xs-2
    label.control-label(for="Level", style="margin-top:6px;") Level
.col-xs-4
    select.form-control#Level
        each val,index in ['Elementary school','Middle School','High school and beyond']
            option(value=index)= val
.col-xs-2
.col-xs-4
    input.form-control#When6(placeholder="Class 6 date  / start time-end time")
br
br
.col-xs-2
    label.control-label(for="Difficulty", style="margin-top:6px;") Difficulty
.col-xs-4
    select.form-control#Difficulty
        each val,index in ['Beginner','Has used the TechGroms system','Has completed a TechGroms class','Almost self-sufficient','An expert!']
            option(value=index)= val
.col-xs-2
.col-xs-4
    input.form-control#When7(placeholder="Class 7 date  / start time-end time")
br
br
.col-xs-2
    label.control-label(for="Price", style="margin-top:6px;") Price
.col-xs-4
    input.form-control#Price(placeholder="$xxx.xx")
.col-xs-2
.col-xs-4
    input.form-control#When8(placeholder="Class 8 date  / start time-end time")
br
br
.col-xs-2
    label.control-label(for="Notes", style="margin-top:6px;") Notes
.col-xs-10
    textarea.form-control#Notes(spellcheck=true cols=40 rows=2 placeholder="Enter special details about your Class.")
