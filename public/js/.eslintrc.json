{
    "env": {
        "browser": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "semi": [
            "off",
            "always"
        ],
        "no-mixed-spaces-and-tabs": [
            "off", 
            "smart-tabs"
        ],
        "no-undef": ["off"],
        "no-redeclare": ["off"],
        "no-empty": ["off"]
    }
}