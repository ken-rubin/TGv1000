//- Jade DOM for the login dialog. 
//-

.well
    .row
        form#SigninForm.form-signin
          h2.form-signin-heading
            | Please sign in
          input#inputUsername.form-control(type="text" name="userName" placeholder="Enter your user name" required autofocus)
          br
          input#inputPassword.form-control(type="password" name="password" placeholder="Password" required)
          br
          button.btn.btn-lg.btn-primary.btn-block(onclick="handleSignInClick();")
            | Sign in

.well#TypeWell
