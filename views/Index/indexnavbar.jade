//- Navbar section.
//- 
//- Area of general site navigation and major function activation.
//-

//- Navbar is a standard bootstrap type.
nav.navbar.navbar-default.navbar-inverse.navbar-fixed-top(role="navigation")

  //- Fluid.
  .container-fluid

    //- The header defines the minimum-look toggle.
    .navbar-header
      button.navbar-toggle(type="button",data-toggle="collapse",data-target="#navbarCollapse")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="/" style='color:white;') #{title}

    //- Main project buttons.
    .navbar-collapse.collapse

      //- Left nav
      ul.nav.navbar-nav

        //- Projects.
        li
          a(href="#") Projects
            span.caret
          ul.dropdown-menu
              li#NewProjectLI
                a#NewProjectButton(href="#") 
                  | New Project
                  span.caret
                  ul.dropdown-menu
                    li
                      a#NewProjectGame(href="#")
                        | Game...
                    li
                      a#NewProjectConsole(href="#")
                        | Console...
                    li
                      a#NewProjectWebSite(href="#")
                        | Web Site...
                    li
                      a#NewProjectHoloLens(href="#")
                        | HoloLens...
              li#OpenProjectLI
                a#OpenProjectButton(href="#") Search for/Open Project...
              li#SaveProjectLI
                a#SaveProjectButton(href="#") Save Project...
              li#SaveProjectAsLI
                a#SaveProjectAsButton(href="#") Save Project As...
              li#QuickSaveProjectLI
                a#QuickSaveProjectButton(href="#") Quick Save Project
              li#CloseProjectLI
                a#CloseProjectButton(href="#") Close Project

        //- Themes.
        li.active.dropdown
          a.dropdown-toggle(href="#", data-toggle="dropdown") 
            span.glyphicon.glyphicon-picture
            | &nbsp;Themes 
            ul.dropdown-menu
              li.enabled
                a#UnicornButton(href="#") Unicorn
              li.enabled
                a#TechButton(href="#") Tech

        //- Adminzone will eventually be hidden to non-admin users
        li.active
          a#AdminzoneButton
            span.glyphicon.glyphicon-cog
            | &nbsp;Adminzone

      button#PlayBtn.btn.btn-default.disabledifnoproj.navbar-right(type="button" data-toggle="tooltip" title="Run Project" aria-label="Run Project" style="margin-right: 40px; margin-top: 10px;")
        span.glyphicon.glyphicon-play(aria-hidden="true")
